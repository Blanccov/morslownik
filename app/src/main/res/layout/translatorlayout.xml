<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D737F">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="453dp"
        android:layout_height="511dp"
        android:src="@drawable/vector_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/torchButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#384146"
        android:src="@drawable/torch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <ImageButton
        android:id="@+id/soundButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#384146"
        android:src="@drawable/volume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/torchButton" />

    <ImageButton
        android:id="@+id/microphoneButton"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#384146"
        android:src="@drawable/micro"
        app:layout_constraintBottom_toTopOf="@+id/afterText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switchButton"
        app:layout_constraintTop_toBottomOf="@+id/prevText" />

    <TextView
        android:id="@+id/afterText"
        android:layout_width="353dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        android:background="#CFC6BF"
        android:ems="10"
        android:inputType="none"
        android:padding="10dp"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchButton" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#CFC6BF"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="125dp"
        android:layout_height="127dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="83dp"
        android:src="@drawable/morsik"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prevText"
        android:layout_width="353dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:background="#CFC6BF"
        android:ems="10"
        android:hint="Hello"
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/switchButton"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/transalte_button"
        app:layout_constraintEnd_toEndOf="@+id/prevText"
        app:layout_constraintStart_toStartOf="@+id/prevText"
        app:layout_constraintTop_toBottomOf="@+id/prevText" />

    <ImageView
        android:id="@+id/button_copy"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/duplicate"
        app:layout_constraintEnd_toEndOf="@+id/prevText"
        app:layout_constraintTop_toTopOf="@+id/prevText" />

    <ImageView
        android:id="@+id/button_copy2"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/duplicate"
        app:layout_constraintEnd_toEndOf="@+id/afterText"
        app:layout_constraintTop_toTopOf="@+id/afterText" />

    <Button
        android:id="@+id/translateButton"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/roundstyle2"
        android:backgroundTint="#CFC6BF"
        android:text="@string/transalte_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toEndOf="@+id/soundButton"
        app:layout_constraintTop_toBottomOf="@+id/afterText"
        app:layout_constraintVertical_bias="0.46" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="191dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/soundButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afterText"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/wpmView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WPM: 10"
        android:textColor="#CFC6BF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afterText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/clearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="300dp"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="302dp"
        android:text="SMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>