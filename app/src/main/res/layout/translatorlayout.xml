<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D737F">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="453dp"
        android:layout_height="511dp"
        android:src="@drawable/vector_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#384146"
        android:src="@drawable/torch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/soundButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#384146"
        android:src="@drawable/volume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <EditText
        android:id="@+id/afterText"
        android:layout_width="353dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        android:background="#CFC6BF"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:text="aha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#CFC6BF"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#293438"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="125dp"
        android:layout_height="127dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="83dp"
        android:src="@drawable/morsik"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prevText"
        android:layout_width="353dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:background="#CFC6BF"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:text="aha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/transalte_button"
        app:layout_constraintEnd_toEndOf="@+id/prevText"
        app:layout_constraintStart_toStartOf="@+id/prevText"
        app:layout_constraintTop_toBottomOf="@+id/prevText" />

    <ImageView
        android:id="@+id/button_copy"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/duplicate"
        app:layout_constraintEnd_toEndOf="@+id/prevText"
        app:layout_constraintTop_toTopOf="@+id/prevText" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/duplicate"
        app:layout_constraintEnd_toEndOf="@+id/afterText"
        app:layout_constraintTop_toTopOf="@+id/afterText" />

    <Button
        android:id="@+id/translateButton"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/roundstyle2"
        android:backgroundTint="#CFC6BF"
        android:text="@string/transalte_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afterText" />

</androidx.constraintlayout.widget.ConstraintLayout>